{
    "env": {
        "es6": true,
        "node": true,
        "browser" : true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion" : 8,
        "ecmaFeatures" : { "jsx" : true }
    },
    "rules": {
        "no-unused-vars" : [
            "error",
            { "argsIgnorePattern" : "^_" }
        ],
        "no-console" : "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
